    "mathjax-full": "^3.2.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/katex": "^0.16.7",
    "@types/lodash-es": "^4.17.12",
    "@types/markdown-it": "^14.1.2",
