{
  "name": "@cobapen/markdown",
  "version": "0.4.2",
  "description": "A markdown converter for cobapen website",
  "keywords": [
    "markdown"
  ],
  "license": "MIT",
  "author": "yamavol",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/cobapen/markdown#readme",
  "bugs": {
    "url": "https://github.com/cobapen/markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cobapen/markdown.git"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "engines": {
    "node": ">=20.11.0 <21 || >=21.2.0"
  },
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --build tsconfig.dev.json",
    "build:doc": "npm run build && node docs/build.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@mathjax/src": "^4.1.0",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.27",
    "lodash-es": "^4.17.23",
    "markdown-it": "^14.1.0",
    "markdown-it-adv-table": "^0.1.2",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-cjk-breaks": "file:src/cjk-break",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-table-of-contents": "^1.1.0"
  },
  "devDependencies": {
    "@cobapen/eslint-config": "^0.5.0",
    "@types/katex": "^0.16.8",
    "@types/lodash-es": "^4.17.12",
    "@types/markdown-it": "^14.1.2",
    "@types/mustache": "^4.2.6",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "mustache": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
